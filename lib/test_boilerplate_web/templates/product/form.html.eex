<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <div class="mb-6">
    <%= label f, :name, class: "form-label" %>
    <%= text_input f, :name, class: "form-input" %>
    <%= error_tag f, :name %>
  </div>

  <div class="mb-6">
    <%= label f, :description, class: "form-label" %>
    <%= textarea f, :description, class: "form-input" %>
    <%= error_tag f, :description %>
  </div>

  <div class="mb-6">
    <%= label f, :price, class: "form-label" %>
    <%= number_input f, :price, step: "any" %>
    <%= error_tag f, :price %>
  </div>

  <div class="mt-8 mb-2">
    <%= submit "Save", class: "btn btn-primary btn-sm" %>
    <%= link "Back", to: Routes.product_path(@conn, :index), class: "ml-2 btn btn-link btn-sm" %>
  </div>
<% end %>
